{
  "name": "@claude-code/deno-agent",
  "version": "1.0.0",
  "exports": "./src/mod.ts",
  "tasks": {
    "test": "deno test --allow-all tests/",
    "test:agent": "deno test --allow-all tests/agent_test.ts",
    "test:manager": "deno test --allow-all tests/manager_test.ts",
    "example:basic": "deno run --allow-all examples/basic.ts",
    "example:streaming": "deno run --allow-all examples/streaming.ts",
    "example:sandboxed": "deno run --allow-net --allow-run --allow-env --allow-read=./sandbox-workspace,~/Library/Caches/deno --allow-write=./sandbox-workspace examples/sandboxed.ts",
    "example:mcp": "deno run --allow-all examples/mcp-server.ts",
    "example:mcp-advanced": "deno run --allow-all examples/mcp-advanced.ts",
    "example:mcp-default": "deno run --allow-all examples/mcp-default-servers.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check src/mod.ts"
  },
  "fmt": {
    "include": ["src/", "tests/", "examples/"],
    "exclude": ["messy-files/"]
  },
  "lint": {
    "include": ["src/", "tests/", "examples/"],
    "exclude": ["messy-files/"]
  },
  "imports": {
    "@std/assert": "https://deno.land/std@0.224.0/assert/mod.ts",
    "@std/fs": "https://deno.land/std@0.224.0/fs/mod.ts",
    "@std/path": "https://deno.land/std@0.224.0/path/mod.ts",
    "@std/streams": "https://deno.land/std@0.224.0/streams/mod.ts"
  }
}